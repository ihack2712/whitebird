{
	"compilerOptions": {
		"alwaysStrict": true,
		"strict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"lib": [
			"ESNext"
		],
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "./build",
		"rootDirs": [
			"./src",
			"./tests"
		],
		"removeComments": true,
		"newLine": "LF",
		"sourceMap": true,
		"target": "ES2015",
		"types": [
			"jest",
			"node"
		]
	},
	"exclude": [
		"tests/",
		"node_modules/"
	],
	"include": [
		"src/"
	]
}
